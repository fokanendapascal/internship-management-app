{
    "name": "ima-frontend-angular",
    "version": "0.0.0",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "api:generate": "ng-openapi-gen -c openapi-config.json",
        "postinstall": "npm run api:generate || echo '⚠️ OpenAPI non généré (backend non dispo)'"
    },
    "prettier": {
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^21.1.0",
        "@angular/cdk": "^21.1.0",
        "@angular/common": "^20.1.0",
        "@angular/compiler": "^20.1.0",
        "@angular/core": "^20.1.0",
        "@angular/forms": "^20.1.0",
        "@angular/platform-browser": "^20.1.0",
        "@angular/router": "^20.1.0",
        "@swimlane/ngx-charts": "^23.1.0",
        "bootstrap": "^5.3.8",
        "d3": "^7.9.0",
        "lucide-angular": "^0.562.0",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^20.1.3",
        "@angular/cli": "^20.1.3",
        "@angular/compiler-cli": "^20.1.0",
        "@types/d3": "^7.4.3",
        "@types/jasmine": "~5.1.0",
        "jasmine-core": "~5.8.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "ng-openapi-gen": "^1.0.5",
        "typescript": "~5.8.2"
    }
}
